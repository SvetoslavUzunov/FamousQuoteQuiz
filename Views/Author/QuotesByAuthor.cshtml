@model List<QuoteViewModel>

@{
    ViewBag.Title = "Author's quotes";
}

@if (!Model.Any())
{
    <h4>Opps... He has no quotes yet!</h4>
}
else
{
    <h4>Quotes by @Model[0].Author.Name</h4>
    <div class="container">
        <div class="row card-header">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="col col-md-3">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title text-secondary">"@Model[i].Text"</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}